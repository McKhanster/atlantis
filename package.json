{
  "name": "atlantis-core-mcp",
  "version": "0.1.0",
  "description": "AI-Native Orchestrator Core - MCP Server for Rovo Dev Integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "atlantis-mcp": "./dist/index.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "bridge": "node dist/start-bridge.js",
    "registry": "node dist/tools/registry-server.js",
    "logs": "node dist/infrastructure/mcp/central-logger.js",
    "singleton": "node dist/tools/singleton-caller.js",
    "prepublishOnly": "npm run build",
    "start:all": "npm run logs & npm run start",
    "start:with-logs": "npm run logs & npm run registry & npm start",
    "start:bridge": "npm run bridge",
    "test:singleton": "npm run singleton",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "ci": "npm run lint && npm run type-check && npm run test:ci",
    "clean": "rm -rf dist coverage"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {

    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  }
}
